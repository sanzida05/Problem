int main()
{
    int a,b,c;

    printf("Please enter your value");

    scanf("%d %d %d", &a, &b, &c);



   float average = (a+b+c)/3.0;

    printf("value of a: %d\n", a);
    printf("value of b: %d\n", b);
    printf("value of c: %d\n", c);

    printf(" Average of a, b, and c :%f\n", average);

    return 0;
}
