#include <stdio.h>
#include <stdlib.h>


int main()
{

    int num;
    int n;
    int array[n];
    int result;


    scanf("%d",&num);
    scanf("%d",&n);


    for(int i=0; i<=n; i++){
        array[i] = num % 10;
        int last_num = num / 10;
        num = last_num;

        if(num == 0){
            break;

        }

    }

    int lastElement = sizeof(array)/sizeof(array[5]);

    printf("%d\n",lastElement);
      result = array[0] + array[n-1];
    printf("%d",result);
    return 0;
}


