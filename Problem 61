#include <stdio.h>
#include <stdlib.h>

int main()
{
   int a[5], i, even_sum = 0, odd_sum = 0;


   printf("Please Enter the value of array:\n");

   for(i=0; i<5; i++){
    scanf("%d\n", &a[i]);
   }
    printf(" Value of array:");
    for(i=0; i<5; i++){
    printf("%d\n", a[i]);

     if(a[i]% 2== 0){
       even_sum = even_sum + a[i];
     }

     else{
        odd_sum = odd_sum + a[i];
     }

   }

   printf("sum of odd values: %d\n", odd_sum);
   printf("sum of even values: %d\n", even_sum);




    return 0;
}
